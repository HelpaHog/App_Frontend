<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.uark.csce.helpahog.MapsActivity"
    map:uiCompass="true"
    map:mapType="normal"
    map:cameraTargetLat="36.068693"
    map:cameraTargetLng="-94.171468"
    map:cameraZoom="17">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#000000"
        android:text=""
        android:id="@+id/floor_indicator"
        android:textSize="20dp"
        />

    <RadioGroup android:id="@+id/floor_selector"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="1"
            android:textOff="1"
            android:text="1"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="2"
            android:textOff="2"
            android:text="2"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="3"
            android:textOff="3"
            android:text="3"/>
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="4"
            android:textOff="4"
            android:text="4" />
        <ToggleButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="5"
            android:textOff="5"
            android:text="5"/>
    </RadioGroup>



</fragment>
